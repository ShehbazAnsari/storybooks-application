<div class="row">
    <div class="col s12">
        <h3 class="blue-grey-text animated bounceInDown">{{story.title}}
            <small class="blue-grey-text">{{{editIcon story.user user story._id false}}}</small>
        </h3>
    </div>
</div>
<div class="row">
    <div class="col s12 m4">
        <div class="card center-align animated bounceInLeft">
            <div class="card-content">
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
                <span class="card-title blue-grey-text">
                    {{story.user.displayName}}
                </span>
            </div>
        </div>
    </div>
    <div class="col s12 m8">
        <div class="card story animated bounceInRight">
            <div class="card-content">
                <span class="card-title">{{formatDate story.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
            <div class="card-action center-align">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>

